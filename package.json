{
	"name": "vector-bloom",
	"version": "1.1.0",
	"source": "src/vector-bloom.js",
	"main": "dist/vector-bloom.js",
	"module": "dist/vector-bloom.module.js",
	"description": "Create a flower with layers of florets and petals and export them as svg",
	"keywords": [
		"flower",
		"flowers",
		"generator",
		"maker",
		"vector",
		"petals",
		"sunflower",
		"dahlia",
		"daisy"
	],
	"scripts": {
		"build": "parcel build && tsc --project jsconfig.json"
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/d-0-s-t/vector-bloom.git"
	},
	"homepage": "https://www.d0st.me/art/flowers",
	"eslintConfig": {
		"extends": [
			"eslint:recommended",
			"plugin:jsdoc/recommended"
		],
		"parserOptions": {
			"ecmaVersion": 6,
			"sourceType": "module"
		},
		"env": {
			"es6": true,
			"browser": true
		},
		"rules": {
			"no-var": "error",
			"indent": [
				"error",
				"tab",
				{
					"SwitchCase": 1
				}
			],
			"linebreak-style": [
				"error",
				"unix"
			],
			"quotes": [
				"error",
				"double"
			],
			"semi": [
				"error",
				"never"
			],
			"jsdoc/multiline-blocks": [
				"error",
				{
					"noZeroLineText": false,
					"noFinalLineText": false
				}
			],
			"jsdoc/require-param-description": 0,
			"jsdoc/require-returns-description": 0,
			"jsdoc/newline-after-description": 0,
			"jsdoc/require-property-description": 0,
			"jsdoc/require-jsdoc": [
				"error",
				{
					"exemptEmptyFunctions": true,
					"require": {
						"ArrowFunctionExpression": false,
						"FunctionExpression": true,
						"MethodDefinition": true
					}
				}
			]
		},
		"settings": {
			"jsdoc": {
				"mode": "typescript"
			}
		},
		"plugins": [
			"jsdoc"
		]
	},
	"license": "MIT",
	"devDependencies": {
		"eslint": "^8.48.0",
		"eslint-plugin-jsdoc": "^46.5.0",
		"parcel": "^2.9.3"
	}
}
